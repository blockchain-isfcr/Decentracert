{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/**",
          "contracts/deployments/**",
          "frontend/src/services/abis/**",
          "contracts/artifacts/contracts/SoulboundNFT.sol/SoulboundNFT.json"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "^/static/(.*)", "dest": "/frontend/build/static/$1" },
    { "src": "/(.*\\.(js|json|css|ico|png|jpg|jpeg|svg|webp))", "dest": "/frontend/build/$1" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
} 